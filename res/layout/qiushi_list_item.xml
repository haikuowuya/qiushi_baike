<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_author_img"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_default" />

    <TextView
        android:id="@+id/tv_author_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_author_img"
        android:layout_alignTop="@id/iv_author_img"
        android:layout_toRightOf="@id/iv_author_img"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:text="无名氏"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_author_img"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="无名氏"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:src="@drawable/ic_launcher"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_agree_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_img"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:text="20"
        android:drawableLeft="@drawable/ic_up"
        android:drawablePadding="4dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_dis_agree_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_img"
        android:gravity="center"
        android:layout_centerHorizontal="true"
         android:layout_alignBottom="@id/tv_agree_count"
        android:layout_alignTop="@id/tv_agree_count"
        android:padding="10dp"
        android:text="40"  
        android:drawableLeft="@drawable/ic_down"
        android:drawablePadding="4dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_comment_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_img"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"
         android:layout_alignBottom="@id/tv_dis_agree_count"
        android:layout_alignTop="@id/tv_dis_agree_count"
        android:padding="10dp"
        android:text="40条评论"  
        android:layout_alignRight="@id/tv_dis_agree_count"
        android:drawableLeft="@drawable/ic_down"
        android:drawablePadding="4dp"
        android:textSize="16sp" />

</RelativeLayout>